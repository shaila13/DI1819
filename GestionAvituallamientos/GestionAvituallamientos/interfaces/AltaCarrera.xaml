<Window x:Class="GestionAvituallamientos.interfaces.AltaCarrera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AltaCarrera" Height="140" Width="300" Icon="/imagenes/corredor.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/Runners.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.456,1.275" Width="112" Foreground="#FFF007DC" FontWeight="Bold"/>
        <TextBox x:Name="txNombreCarrera" Text="{Binding Path=NombreCarrera, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="23" Margin="150,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132"/>
        <Button x:Name="AddCarrera" Content="ADD" HorizontalAlignment="Left" Margin="123,81,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.231,0.583" Click="AddCarrera_Click" />
        <Button x:Name="btCancel"  Content="Cancel" HorizontalAlignment="Left" Margin="207,81,0,0" VerticalAlignment="Top" Width="75" Click="btCancel_Click"/>

    </Grid>
</Window>
