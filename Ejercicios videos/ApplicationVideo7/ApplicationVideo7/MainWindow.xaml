<Window x:Class="ApplicationVideo7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="DataGridLibros" ItemsSource="{Binding Path=listaLibros}" Grid.ColumnSpan="2" Margin="10,74,10.4,0" VerticalAlignment="Top" Height="166" SelectionChanged="DataGridLibros_SelectionChanged" MouseDoubleClick="DataGridLibros_MouseDoubleClick"/>
        
        <Menu Height="20" VerticalAlignment="Top" Margin="10,0,10.4,0">
            <MenuItem Header="Archivo" Click="MenuItem_Click_2">
                <MenuItem x:Name="NuevoMenuItem" Header="Nuevo..." HorizontalAlignment="Left" Width="100"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
